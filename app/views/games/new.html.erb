<h1>New game</h1>

<ul id="letters">
  <% @letters.each do |letter| %>
    <li><div class="contenant"><strong><%= letter %></strong></div></li>
  <% end %>
</ul>

<p>What's the longest word you can find ?</p>
<form action="score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word">
  <input name="grid" type="hidden" value='<%= @letters.join(', ') %>' />
  <input type="submit" value="Play">
</form>
